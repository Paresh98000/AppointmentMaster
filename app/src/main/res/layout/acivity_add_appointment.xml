<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:id="@+id/layou_add_apoint"

	>
	
	<ScrollView
		android:id="@+id/scrl"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintVertical_bias="0.06"
	>
	
		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="match_parent"

			android:orientation="vertical"
		>

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="New Appointment"
				android:textAlignment="center"
				android:textSize="45sp"
				android:textColor="#6f1597"
				android:layout_marginStart="10sp"
				android:layout_marginEnd="10sp"
			/>
			<TextView
				android:id="@+id/txt_error_a"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="Error"
				android:textSize="20sp"
				android:textStyle="bold"
				android:layout_marginTop="5sp"
				android:textColor="#f00"
				android:textAlignment="center"
				android:visibility="gone"/>
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:padding="10sp">

				<EditText
					android:id="@+id/edit_name_a"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:ems="20"
					android:hint="Enter your apntmnt name"
					android:textColor="#000"
					android:textSize="20sp" />

			</LinearLayout>

			<LinearLayout
			android:padding="10sp"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

				<TextView
					android:id="@+id/txt_service_a"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="Service :"
					android:textColor="#000"
					android:textSize="20sp" />

				<Spinner
					android:id="@+id/spinner_service_a"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					 >

				</Spinner>

		</LinearLayout>

			<LinearLayout
				android:padding="10sp"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical">

				<TextView
					android:id="@+id/txt_service_provider_a"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="Service Provider :"
					android:textColor="#000"
					android:textSize="20sp" />

				<Spinner
					android:id="@+id/spinner_service_provider_a"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="5sp"
					 />

			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:padding="10sp">

				<TextView
					android:id="@+id/txt_date_a"
					android:layout_width="150sp"
					android:layout_height="wrap_content"
					android:text="Date :"
					android:textSize="20sp"
					android:textColor="#000"/>

				<DatePicker
					android:id="@+id/edit_date_a"
					android:layout_width="wrap_content"
					android:layout_height="0dp"
					android:layout_weight="1"
					android:minDate=""
					/>

			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:padding="10sp">

				<TextView
					android:id="@+id/txt_time_a"
					android:layout_width="150sp"
					android:layout_height="wrap_content"
					android:text="Time :"
					android:textSize="20sp"
					android:textColor="#000"/>

				<TimePicker
					android:id="@+id/edit_time_a"
					android:layout_width="wrap_content"
					android:layout_height="0dp"
					android:layout_weight="1"
					android:textSize="20sp"
					android:ems="10"
					android:inputType="time" />

			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:padding="10sp">

				<TextView
					android:id="@+id/txt_place_a"
					android:layout_width="150sp"
					android:layout_height="wrap_content"
					android:text="Place :"
					android:textSize="20sp"
					android:textColor="#000"/>

				<EditText
					android:id="@+id/edit_place_a"
					android:layout_width="200sp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:textSize="20sp"
					android:ems="10"
					android:inputType="text" />

			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:padding="10sp">

				<TextView
					android:id="@+id/txt_desc_a"
					android:layout_width="150sp"
					android:layout_height="wrap_content"
					android:text="Description :"
					android:textSize="20sp"
					android:textColor="#000"/>

				<EditText
					android:id="@+id/edit_desc_a"
					android:layout_width="200sp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:textSize="20sp"
					android:ems="10"
					android:inputType="text" />

			</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:padding="10sp">

			<Button

				android:layout_width="150sp"
				android:layout_height="wrap_content"
				android:textColor="#fff"
				android:text="Create"
				android:layout_margin="10sp"
				android:textSize="20sp"
				android:onClick="onCreateAppointment"
				android:background="#059"/>

			<Button
				android:layout_width="150sp"
				android:layout_margin="10sp"
				android:layout_height="wrap_content"
				android:textColor="#fff"
				android:background="#f11"
				android:text="Cancel"
				android:onClick="onCancelNewAppointment"
				android:textSize="20sp"/>

		</LinearLayout>

		</LinearLayout>

	</ScrollView>
	
</android.support.constraint.ConstraintLayout>
