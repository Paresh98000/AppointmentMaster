<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <ScrollView
        android:id="@+id/scr_add_service"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.08">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:padding="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:text="@string/add_service"
                android:textAlignment="center"
                android:textColor="#9C27B0"
                android:textSize="40sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.011" />

            <TextView
                android:id="@+id/txt_error_s"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:text="Error"
                android:textAlignment="center"
                android:textColor="#f00"
                android:textSize="20sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <EditText
                android:id="@+id/s_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Service Name"
                android:inputType="text"
                android:maxLines="1"
                android:padding="15sp"
                android:textColor="@color/darkblue"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_s_type_a_s"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:padding="15sp"
                android:text="Service Type : "
                android:textColor="#045F57"
                android:textSize="25sp"
                android:textStyle="italic" />

            <Spinner
                android:id="@+id/spinner_serviceType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:spinnerMode="dropdown"></Spinner>

            <TextView
                android:id="@+id/txt_des_a_s"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:padding="15sp"
                android:text="Description of Service : "
                android:textColor="#045F57"
                android:textSize="25sp"
                android:textStyle="italic" />

            <EditText
                android:id="@+id/s_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="describe your service"
                android:inputType="text"

                android:maxLines="5"
                android:minLines="1"
                android:padding="15sp"
                android:textColor="@color/darkblue"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/txt_ph_a_s"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:padding="15sp"
                android:text="Phone : "
                android:textColor="#045F57"
                android:textSize="25sp"
                android:textStyle="italic" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="3"
                    android:padding="5sp"
                    android:text="+91"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/phone_ad_service"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="phone number"
                    android:inputType="phone"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:padding="10sp"
                    android:textColor="@color/darkblue"
                    android:textSize="25sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/txt_add_a_s"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:padding="15sp"
                android:text="Address : "
                android:textColor="#045F57"
                android:textSize="25sp"
                android:textStyle="italic" />


            <EditText
                android:id="@+id/s_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Street"
                android:inputType="text"
                android:padding="15sp"
                android:textColor="#009688"
                android:textSize="25sp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/s_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Area"
                android:inputType="text"
                android:padding="15sp"
                android:textColor="#009688"
                android:textSize="25sp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/s_zip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="6"
                android:hint="Zipcode"
                android:inputType="number"
                android:padding="15sp"
                android:textColor="@color/darkblue"
                android:textSize="25sp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/s_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="City"
                android:inputType="text"
                android:maxLines="1"
                android:padding="15sp"
                android:textColor="@color/darkblue"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/s_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="State"
                android:inputType="text"
                android:maxLines="1"
                android:padding="15sp"
                android:text="Gujarat"
                android:textColor="@color/darkblue"
                android:textSize="25sp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/s_contry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Country"
                android:inputType="text"
                android:maxLines="1"
                android:padding="15sp"
                android:text="India"
                android:textColor="@color/darkblue"
                android:textSize="25sp"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <Button
                    android:id="@+id/btn_create"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="onCreateService"
                    android:padding="10sp"
                    android:text="Create"
                    android:textColor="@color/darkblue"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/btn_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="onCancelServiceCreate"
                    android:padding="10sp"
                    android:text="Cancel"
                    android:textColor="@color/darkblue"
                    android:textSize="25sp" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>